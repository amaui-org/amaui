{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false,
    "allowJs": true
  },
  "exclude": [
    "**/build",
    "**/node_modules",
  ]
}
