{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@amaui/style-react": [
        "../packages/amaui-style-react/build"
      ],
      "@amaui/style-react/*": [
        "../packages/amaui-style-react/build/*"
      ],
      "@amaui/icons-material-rounded-react": [
        "../packages/amaui-icons-material-rounded-react/build"
      ],
      "@amaui/icons-material-rounded-react/*": [
        "../packages/amaui-icons-material-rounded-react/build/*"
      ],
      "@amaui/icons-material-sharp-react": [
        "../packages/amaui-icons-material-sharp-react/build"
      ],
      "@amaui/icons-material-sharp-react/*": [
        "../packages/amaui-icons-material-sharp-react/build/*"
      ],
      "@amaui/icons-material-two-tone-react": [
        "../packages/amaui-icons-material-two-tone-react/build"
      ],
      "@amaui/icons-material-two-tone-react/*": [
        "../packages/amaui-icons-material-two-tone-react/build/*"
      ],
      "@amaui/ui-react": [
        "../packages/amaui-ui-react/build"
      ],
      "@amaui/ui-react/*": [
        "../packages/amaui-ui-react/build/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}